/**index.wxss**/
page {
  background-color: #ececec;
}

.userinfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

text{
  margin-top: 15rpx;
}


.list-view {
  display: flex;
  flex-direction: column;
}

.list-itemview {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.icon-more, .icon-item, .icon-more image {
  display: flex;
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 2px;
  margin-right: 5px;
  vertical-align: middle;
}

.line-view {
  /*中间的过渡的横线*/
  width: 100%;
  height: 1px;
  border-top: solid #ececec 1px;
}

navigator {
  text-align: left;
  padding: 0rpx;
  margin: 0rpx;
  border-bottom: 1rpx solid silver;
  height: 80rpx;
}